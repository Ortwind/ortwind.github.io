---
layout: posts
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">

	<title>Clever Name for a Blog about PowerShell</title>
	<link href="http://hurst.systems/blog/atom.xml" rel="self"/>
	<link href="http://hurst.systems/blog"/>
	<updated>{{ site.time | date_to_xmlschema }}</updated>
	<id>http://hurst.systems/blog</id>
	<author>
		<name>Scott Hurst</name>
		<email>scott+blog@hurst.systems</email>
	</author>

	{% for post in site.posts %}
		<entry>
			<title>{{ post.title }}</title>
			<link href="http://hurst.systems{{ post.url }}"/>
			<updated>{{ post.date | date_to_xmlschema }}</updated>
			<id>http://hurst.systems{{ post.id }}</id>
			<content type="html">{{ post.content | xml_escape }}</content>
		</entry>
	{% endfor %}

</feed>
